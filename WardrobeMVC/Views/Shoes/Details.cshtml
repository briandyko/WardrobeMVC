@model WardrobeMVC.Models.Sho

@{
    ViewBag.Title = "Details";
}

<h1 class="detailsHeading centerText">Shoes</h1>

<div class="row">

    <div class="col-sm-5 centerText">
        <hr />

        <h3 class="detailsOdd">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
        <h3 class="detailsEven">@Html.DisplayNameFor(model => model.Type): @Html.DisplayFor(model => model.Type)</h3>
        <h3 class="detailsOdd">Color: @Html.DisplayFor(model => model.Color.Color1)</h3>
        <h3 class="detailsEven">Occasion: @Html.DisplayFor(model => model.Occasion.Occasion1)</h3>
        <h3 class="detailsOdd">Season: @Html.DisplayFor(model => model.Season.Season1)</h3>
        <p class="glyphicon glyphicon-cloud">
</div>

    <div class="col-sm-7">
        @{
            if (Model.PhotoID == 36)
            {
                <img class="rectangleReSize" src="~/Content/blackToeShoes.jpg" />
            }
            else if (Model.PhotoID == 37)
            {
                <img class="rectangleReSize" src="~/Content/blackOldDirtyShoes.jpg" />
            }
            else if (Model.PhotoID == 38)
            {
                <img class="rectangleReSize" src="~/Content/brokenBrownShoes.jpg" />
            }
            else if (Model.PhotoID == 39)
            {
                <img src="~/Content/brownLacelessDressShoes.jpg" />
            }
            else if (Model.PhotoID == 40)
            {
                <img class="rectangleReSize" src="~/Content/mixedAmericanShoe.jpg" />
            }
            if (Model.PhotoID == 41)
            {
                <img class="rectangleReSize" src="~/Content/mixedBrightShoes.jpg" />
            }
            else if (Model.PhotoID == 42)
            {
                <img class="rectangleReSize" src="~/Content/mixedHikingShoes.png" />
            }
            else if (Model.PhotoID == 43)
            {
                <img class="squareReSize" src="~/Content/whiteDressShoes.jpg" />
            }
            else if (Model.PhotoID == 44)
            {
                <img src="~/Content/blackLeatherBoots.jpg" />
            }
            else if (Model.PhotoID == 45)
            {
                <img class="rectangleReSize" src="~/Content/mixedColorBoots.jpg" />
            }

        }

    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ShoesID }) |
    @Html.ActionLink("Back to List", "Index")
</p>