@model IEnumerable<WardrobeMVC.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*Shoes Row One*@

<h2>Shoes</h2>

<div class="row">
    @foreach (var item in Model)
    {
        if (item.ShoesID >= 1 && item.ShoesID <= 6)
        {
            <div class="col-sm-4 col-md-2">
                <div class="thumbnail">
                    <img src=@Url.Content(item.Photo.Photo1)> @*set alts in id fields?*@
                    <div class="caption">
                        <p class="detailButton">@Html.ActionLink("Details", "Details", new { id = item.ShoesID }, new { @class = "btn btn-primary", role = "button" })</p>
                    </div>
                </div>
            </div>
        }
    }
</div>

