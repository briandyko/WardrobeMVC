@model IEnumerable<WardrobeMVC.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*Pants Row One*@

<h2>Pants</h2>

<div class="row">
    @foreach (var item in Model)
    {
        if (item.BottomsID >= 1 && item.BottomsID <= 6)
        {
            <div class="col-sm-4 col-md-2">
                <div class="thumbnail">
                    <img src=@Url.Content(item.Photo.Photo1)> @*set alts in id fields?*@
                    <div class="caption">
                        @*<h3>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(modelItem => item.Name)</h3>*@
                        <p>@Html.ActionLink("Details", "Details", new { id = item.BottomsID }, new { @class = "btn btn-primary", role = "button" })</p>
                        @*<p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.TopsID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TopsID })
                            </p>*@
                    </div>
                </div>
            </div>
        }
    }
</div>

