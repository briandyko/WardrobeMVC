@model WardrobeMVC.Models.Bottom

@{
    ViewBag.Title = "Details";
}


<h1 class="detailsHeading centerText">Bottoms</h1>

<div class="row">

    <div class="col-sm-5 centerText">
        <hr />

        <h3 class="detailsOdd">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
        <h3 class="detailsEven">@Html.DisplayNameFor(model => model.Type): @Html.DisplayFor(model => model.Type)</h3>
        <h3 class="detailsOdd">Color: @Html.DisplayFor(model => model.Color.Color1)</h3>
        <h3 class="detailsEven">Occasion: @Html.DisplayFor(model => model.Occasion.Occasion1)</h3>
        <h3 class="detailsOdd">Season: @Html.DisplayFor(model => model.Season.Season1)</h3>
        <p class="glyphicon glyphicon-cloud">
</div>

    <div class="col-sm-7">
        @{
            if (Model.PhotoID == 27)
            {
                <img id="shiny" src="~/content/blackshinypants.jpg" />
            }
            else if (Model.PhotoID == 28)
            {
                <img class="rectangleReSize" src="~/Content/blueMenCargoPants.jpg" />
            }
            else if (Model.PhotoID == 29)
            {
                <img class="rectangleReSize" src="~/Content/brownCargoPants.jpg" />
            }
            else if (Model.PhotoID == 30)
            {
                <img id="green" src="~/Content/greenPants.jpg" />
            }
            else if (Model.PhotoID == 31)
            {
                <img class="rectangleReSize" src="~/Content/cardboardPants.jpg" />
            }
            if (Model.PhotoID == 32)
            {
                <img class="rectangleReSize" src="~/Content/keyboardPants.jpg" />
            }
            else if (Model.PhotoID == 33)
            {
                <img class="invertedRectangleReSize" src="~/Content/orangeCapriPants.jpg" />
            }
            else if (Model.PhotoID == 34)
            {
                <img class="rectangleReSize" src="~/Content/blueJeansShorts.jpg" />
            }
            else if (Model.PhotoID == 35)
            {
                <img class="rectangleReSize" src="~/Content/whiteGymShorts.jpg" />
            }

        }

    </div>
</div>
    
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BottomsID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

