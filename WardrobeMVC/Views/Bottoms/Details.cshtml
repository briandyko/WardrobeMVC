@model WardrobeMVC.Models.Bottom

@{
    ViewBag.Title = "Details";
}


<h1 class="detailsHeading centerText">Bottoms</h1>

<div class="row">

    <div class="col-sm-5 centerText">
        <hr />

        <h3 class="detailsOdd">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
