@*Tshirts Row 1*@

<h2>T-Shirts</h2>

<div class="row">
@foreach (var item in Model)
{
    if (item.TopsID >= 1 && item.TopsID <= 6)
    {
    <div class="col-sm-4 col-md-2">
        <div class="thumbnail">
            <img src=@Url.Content(item.Photo.Photo1)> @*set alts in id fields?*@
            <div class="caption">
                <p>@Html.ActionLink("Details", "Details", new { id = item.TopsID }, new { @class = "btn btn-primary", role = "button" })</p>
            </div>
        </div>
    </div>
    }
}
